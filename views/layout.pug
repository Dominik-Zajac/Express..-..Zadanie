doctype html

//- mixins for generating links
mixin navLink(title, url)
  li.list-item
    a(href=url class=activeLink===url ? 'active' : '')=title

html
  head
    title= title
    link(href='https://fonts.googleapis.com/css?family=Roboto&display=swap', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul.nav-list
        +navLink('Home', '/')
        +navLink('Flights', '/flights')
        +navLink('Tourists', '/tourists')
    block content
